extends ../../layout/user.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)
  +alert-success(3000)
  .register(style="background-image: url('/images/bg-01.jpg'); background-size: cover; background-position: center; padding: 20px;")
    .container
        .wrap
            .inner-title Nhập mã otp xác thực 
            .inner-form
                form(action="/user/password/otp" method="POST")
                    div(class="form-group")
                        label(for="email") Email
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            required
                            value = email
                            readonly
                        )
                    div(class="form-group")
                        label(for="otp") Mã OTP
                        input(
                            type="text"
                            class="form-control"
                            id="otp"
                            name="otp"
                            placeholder="Nhập mã otp"
                            required
                        )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                        ) Xác nhận