extends ../../layout/user.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)
  +alert-success(3000)
  .register(style="background-image: url('/images/bg-01.jpg'); background-size: cover; background-position: center; padding: 20px;")
    .container
        .wrap
            .inner-title Đổi mật khẩu
            .inner-form
                form(action="/user/password/reset" method="POST")
                    div(class="form-group")
                        label(for="password") Mật khẩu mới
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            required
                        )
                    div(class="form-group")
                        label(for="confirmPassword") Xác nhận mật khẩu
                        input(
                            type="password"
                            class="form-control"
                            id="confirmPassword"
                            name="confirmPassword"
                        required
                        )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                        ) Đổi mật khẩu