extends ../../layout/user.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)
  +alert-success(3000)
  .register(style="background-image: url('/images/bg-01.jpg'); background-size: cover; background-position: center; padding: 20px;")
    .container
        .wrap
            .inner-title Vui lòng nhập Email 
            .inner-form
                form(action="/user/password/forgot" method="POST")
                    div(class="form-group")
                        label(for="email") Email
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            placeholder="Nhập email của bạn"
                            required
                        )
                    div(class="form-group")
                        button(
                        type="submit"
                        class="btn btn-primary btn-block"
                        ) Gửi mail xác nhận