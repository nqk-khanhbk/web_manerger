extends ../../layout/user.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)
  .register(style="background-image: url('/images/bg-01.jpg'); background-size: cover; background-position: center; padding: 20px;")
    .container
        .wrap
            .inner-title Đăng ký tài khoản
            .inner-form
                form(
                    action="/user/register"
                    method="POST"
                )
                    div(class="form-group")
                        label(for="fullName") Họ và tên
                        input(
                            type="text"
                            class="form-control"
                            id="fullName"
                            name="fullName"
                            required
                        )
                    div(class="form-group")
                        label(for="email") Email
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            required
                        )
                    div(class="form-group")
                        label(for="password") Mật khẩu
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            required
                        )
                    div(class="form-requiz")
                        div Nếu bạn có tài khoản rồi.
                        div(class="form-login")
                            a(href='/user/login') Đăng nhập
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                        ) Đăng ký