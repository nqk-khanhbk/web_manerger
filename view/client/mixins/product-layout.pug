mixin product-grid(products)
    .row-2
        each item in products
            .col-md-3.col-sm-6.mb-3
                .product-item 
                    .inner-image
                        img(
                            src=item.thumbnail
                            alt=item.title
                        )
                        if(item.featured == '1')
                            div(class="Featured") Nổi bật
                    .inner-content 
                        h3.inner-title 
                            a(href=`/products/detail/${item.slug}`) #{item.title}
                        .inner-price #{item.price}$
