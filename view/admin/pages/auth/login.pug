extends ../../layout/auth.pug
include ../../mixins/alert.pug

block main
  +alert-error(3000)

  .login-container
    .login-box
      h1.text-center Đăng nhập
      form(action=`${prefixAdmin}/auth/login` method="POST")
        .form-group
          label(for="email") Email
          input#email.form-control(type="email" name="email" placeholder="Ex: khanhbk0102@gmail.com" required)
        .form-group
          label(for="password") Mật khẩu
          input#password.form-control(type="password" name="password" placeholder="Nhập mật khẩu" required)
        button.btn.btn-primary.btn-block(type="submit") Đăng nhập
