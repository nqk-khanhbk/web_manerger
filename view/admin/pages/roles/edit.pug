extends ../../layout/defaul.pug
include ../../mixins/alert.pug
block main 
      +alert-error("5000")
      +alert-success("5000")
      h1(class="mb-4") Chỉnh sửa nhóm quyền
      form(
         action = `${prefixAdmin}/roles/edit/${dataRoles.id}?_method=PATCH`
         method = "POST"
      )
         div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                value=dataRoles.title
                required
            )
         div(class="form-group mt-3")
            label(for="desc") Mô tả
            textarea(
                class="form-control"
                id="desc"
                name="description"
                rows="5"
            ) !{dataRoles.description}
         div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Chỉnh sửa