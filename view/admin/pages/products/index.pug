extends ../../layout/defaul.pug

block main
  h1 Danh sách sản phẩm

  .card.mb-3
    .card-header Bộ lọc và tìm kiếm 
    .card-body
      .row 
        .col-6
          each item in filleStatus
            button(class = `btn btn-sm ml-1 btn-outline-success ${item.class}` button-status= item.status) #{item.name}
        .col-6 
          form(id="form-search")
            .input-group
              input(type="text" class="form-control" name="keyword" placeholder="Tìm kiếm ở đây" value = keyword)
              .input-group-append
                button(class="btn btn-success" type="submit") Tìm
                
  table.table.table-hover.table-sm 
    thead
      tr 
        th STT
        th Hình ảnh 
        th Tiêu đề
        th Giá
        th Trạng thái 
        th Hành động
    tbody
      each item, index in product
        tr 
          td #{index+1}
          td 
            img(src=item.thumbnail alt=item.title width="100px" height="auto")
          td #{item.title}
          td #{item.price}$
          td 
            if item.status == 'active'
              a(href="#" class="badge badge-success") Hoạt động
            else if item.status == 'inactive'
              a(href="#" class="badge badge-warning") Ngừng hoạt động
          td
            button(class="btn btn-primary btn-sm" data-id=item.id) Sửa
            button(class="btn btn-danger btn-sm ml-1" data-id=item.id) Xóa
