extends ../../layout/defaul.pug
include ../../mixins/filles-status.pug
include ../../mixins/search.pug
block main
  h1 Danh sách sản phẩm

  .card.mb-3
    .card-header Bộ lọc và tìm kiếm 
    .card-body
      .row 
        .col-6
          +filleStatus(filleStatus)
        .col-6 
          +search(keyword)
                
  table.table.table-hover.table-sm 
    thead
      tr 
        th STT
        th Hình ảnh 
        th Tiêu đề
        th Giá
        th Trạng thái 
        th Hành động
    tbody
      each item, index in product
        tr 
          td #{index+1}
          td 
            img(src=item.thumbnail alt=item.title width="100px" height="auto")
          td #{item.title}
          td #{item.price}$
          td 
            if item.status == 'active'
              a(href="#" class="badge badge-success") Hoạt động
            else if item.status == 'inactive'
              a(href="#" class="badge badge-warning") Ngừng hoạt động
          td
            button(class="btn btn-primary btn-sm" data-id=item.id) Sửa
            button(class="btn btn-danger btn-sm ml-1" data-id=item.id) Xóa
  
  nav  
    ul(class="pagination justify-content-center")
      if(pagination.currentPage > 1)
        li(class=`page-item ${pagination.currentPage == 1 ? "disable" : " "}` button-pagination=pagination.currentPage - 1)
          button(class=`page-link`) Trang trước
      - for(var i=1;i<=pagination.totalPages;i++)
        li(class=`page-item ${pagination.currentPage == i ? "active" : " "}`)
          button(class="page-link" button-pagination = i) #{i}
      if(pagination.currentPage < pagination.totalPages)
        li(class="page-item")
          button(class="page-link" button-pagination=pagination.currentPage + 1) Kế tiếp


