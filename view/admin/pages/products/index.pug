extends ../../layout/defaul.pug
include ../../mixins/filles-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/change-multi.pug
include ../../mixins/alert.pug

block main
  
  +alert-success("5000")

  h1 Danh sách sản phẩm
  .card.mb-3
    .card-header Bộ lọc và tìm kiếm 
    .card-body
      .row 
        .col-6
          +filleStatus(filleStatus)
        .col-6 
          +search(keyword)
  
  .card.mb-3 
    .card-header Danh sách 
      .card-body 
        .row
          .col-8
            +change-multi(`${prefixAdmin}/products/change-multi?_method=PATCH`)
          .col-4 
            a(
              href=`${prefixAdmin}/products/create`
              class="btn btn-outline-success"
            ) +Thêm mới
        table(class="table table-hover table-sm" checkall-multi)
          thead
            tr 
              th 
                 input(class="checkall" type="checkbox")
              th STT
              th Hình ảnh 
              th Tiêu đề
              th Giá
              th Vị trí
              th Trạng thái 
              th Hành động
          tbody
            each item, index in product
              tr 
                td 
                  input(
                    type="checkbox"
                    class="id" 
                    value=item.id
                     )
                td #{index+1}
                td 
                  img(src=item.thumbnail alt=item.title width="100px" height="auto")
                td #{item.title}
                td #{item.price}$
                td 
                  input(
                    type="number"
                    min="1" name="position"
                    value = item.position 
                    style ="width:50px"
                  )
                td 
                  if item.status == 'active'
                    a(
                      href="javascript:;"
                      data-status=item.status 
                      data-id=item.id
                      button-change-status
                      class="badge badge-success"
                      ) Hoạt động
                  else if item.status == 'inactive'
                    a(
                      href="javascript:;"
                      data-status=item.status 
                      data-id=item.id
                      button-change-status
                      class="badge badge-warning") Ngừng hoạt động
                td
                  button(class="btn btn-primary btn-sm" data-id=item.id ) Sửa
                  button(class="btn btn-danger btn-sm ml-1" data-id=item.id button-delete) Xóa
  
  +pagination(pagination)
  form(
      action= ""
      id="form-change-status"
      method="POST"
      data-path=`${prefixAdmin}/products/change-status`
    )
  form(
      action= ""
      id="form-button-delete"
      method="POST"
      data-path=`${prefixAdmin}/products/delete`
    )
  script(src="/admin/js/product.js")
